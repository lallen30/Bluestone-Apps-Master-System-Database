# ===========================================
# White-Label App Configuration
# ===========================================
# Copy this file to .env and update values for your app instance
# 
# IMPORTANT: Never commit .env to version control!
# ===========================================

# API Configuration
# -----------------
# Set to 'true' to use local development server, 'false' for production (knoxdev.org)
USE_LOCAL_API=true

# Base URL for API requests (include /api/v1) - overrides USE_LOCAL_API if set
# API_BASE_URL=http://localhost:3000/api/v1

# Server URL for assets (images, uploads) - overrides USE_LOCAL_API if set
# API_SERVER_URL=http://localhost:3000

# Request timeout in milliseconds
API_TIMEOUT=30000

# App Identification
# ------------------
# Your app's unique ID from the admin portal
APP_ID=56

# App name (used internally)
APP_NAME=AAAVacationRentals

# Display name shown to users
APP_DISPLAY_NAME=AAA Vacation Rentals

# Bundle Identifiers
# ------------------
# iOS Bundle Identifier (must match Xcode project)
IOS_BUNDLE_ID=com.bluestoneapps.aaavacationrentals

# Android Package Name (must match android/app/build.gradle)
ANDROID_PACKAGE=com.bluestoneapps.aaavacationrentals

# Feature Flags
# -------------
# Enable debug logging (set to 'true' or 'false')
ENABLE_DEBUG_LOGGING=false

# Enable analytics tracking
ENABLE_ANALYTICS=false

# App Version
# -----------
# Override app version (optional, typically from app.json)
# APP_VERSION=1.0.0
