FROM node:18-alpine

# Install nodemon globally for development
RUN npm install -g nodemon

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy application files
COPY . .

# Expose port
EXPOSE 3000

# Start application with nodemon for hot-reloading
CMD ["npm", "run", "dev"]
