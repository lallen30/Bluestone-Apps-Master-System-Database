FROM node:18-alpine

# Install nodemon globally for development
RUN npm install -g nodemon

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies during build so node_modules are baked into the image
# Use --production=false to include dev deps in dev image (nodemon etc.)
RUN npm ci --no-audit --no-fund --silent || npm install --no-audit --no-fund --silent

# Copy application files
COPY . .

# Expose port
EXPOSE 3000

# Start application with nodemon for hot-reloading
CMD ["npm", "run", "dev"]
